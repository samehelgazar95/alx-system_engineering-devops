#!/usr/bin/env bash

# Update package lists
sudo apt update

# Install Nginx without root for the entire script (safer)
sudo apt install nginx

# Allow Nginx traffic through firewall
ufw allow 'Nginx HTTP'

# Create basic index and error pages
echo 'Hello World!' > /var/www/html/index.html
echo "Ceci n'est pas une page" > /usr/share/nginx/html/page_404.html

# Start Nginx service
sudo systemctl start nginx

# Configure Nginx redirect and error handling (using a temporary file)
cat <<EOF > /tmp/nginx_config.conf
server {
  listen 80;
  server_name _;

  rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;

  location / {
    root /var/www/html;
    index index.html index.htm;
    error_page 404 /page_404.html;
  }

  location = /page_404.html {
    root /usr/share/nginx/html;
    internal;
  }
}
EOF

# Move the configuration file to the correct location
sudo mv /tmp/nginx_config.conf /etc/nginx/sites-available/default

# Reload Nginx configuration (avoiding potential restart issues)
sudo systemctl reload nginx

# Remove temporary file (optional)
rm /tmp/nginx_config.conf
